{
  "manifest_version": 2,

  "name": "FB FilterFeed",
  "description": "Filter your news feed!",
  "version": "1.0",

  "icons": {
    "128": "toolbar_icon.png"
  },

  "permissions": [
    "https://www.facebook.com/",
    "http://www.facebook.com/",
    "tabs",
    "storage", 
    "notifications", 
    "contextMenus"
  ],

  "background": {
    "scripts": ["bootstrap.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/", "https://www.facebook.com/*"], 
      "js": ["filterfeed.js"], 
      "run_at": "document_start"
    }
  ],

  "page_action": {
    "default_title": "FilterFeed",
    "default_icon": "inactive.png",
    "default_popup": "popup.html"
  }

}